<%- include ("../partials/header.ejs"); %>



<div class="container">
    
    
    <div class="row">
    <div class="col-12 text-center" style="margin: 30px 0 0 0;">
        <h1>Create A New Campground</h1>
    </div>
    </div>
    <div class="row row-content justify-content-center" style="margin: 30px auto;">
        
        <div class="col-md-5">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="campName" placeholder="Campground Name" name="name" required>

                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="price" placeholder="Price" name="price" min="0.01" step="0.01" required>

                </div>
                <div class="form-group">
      <input type="text" class="form-control" id="im" placeholder="Image URL" name="image" required>
                </div>
                <div class="form-group">
      <input type="text" class="form-control" id="des" placeholder="Description" name="des" required>
                </div>
      <button type="submit" class="btn btn-primary btn-sm btn-block">Create Campground</button>
      <a href="/campgrounds">Go Back</a>
                </div>
                
            </form>
            
        </div>
        
    </div>

    
        
</div>
  



