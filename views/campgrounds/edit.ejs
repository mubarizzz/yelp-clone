<%- include ("../partials/header.ejs"); %>



<div class="container">
    
    
    <div class="row">
    <div class="col-12 text-center" style="margin: 30px 0 0 0;">
        <h1>EDIT <%= camp.name %></h1>
    </div>
    </div>
    <div class="row row-content justify-content-center" style="margin: 30px auto;">
        
        <div class="col-md-5">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="campName" value="<%= camp.name %>" name="campg[name]" required>

                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="price" value="<%= camp.price %>" name="campg[price]" min="0.01" step="0.01" required>

                </div>
                <div class="form-group">
      <input type="text" class="form-control" id="im" value="<%= camp.image %>" name="campg[image]" required>
                </div>
                <div class="form-group">
      <input type="text" class="form-control" id="des" value="<%= camp.description %>" name="campg[description]" required>
                </div>
      <button type="submit" class="btn btn-primary btn-sm btn-block">Edit Campground</button>
      <a href="/campgrounds">Go Back</a>
                </div>
                
            </form>
            
        </div>
        
    </div>

    
        
</div>
  



<%- include ("../partials/footer.ejs"); %>